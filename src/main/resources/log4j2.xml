<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
    <Console name="console" target="SYSTEM_OUT">
      <PatternLayout
          pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} %c{5} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="slick.compiler" level="INFO" additivity="true"/>
    <Logger name="slick.relational" level="INFO" additivity="true"/>
    <Logger name="slick.basic" level="INFO" additivity="true"/>
    <Logger name="slick.jdbc" level="INFO" additivity="true"/>
    <Root level="debug" additivity="false">
      <AppenderRef ref="console"/>
    </Root>
  </Loggers>
</Configuration>
